<script type="text/javascript">
  $(document).ready(function(){

    $(".home").click(function(){
      $(".link_main").get(0).click();
    });

    $(".onb").click(function(){
      $(".link_onb").get(0).click();
    });

    $(".history").click(function(){
      $(".link_history").get(0).click();
    });

    $(".notes").click(function(){
      $(".link_notes").get(0).click();
    });

    $(".cart1").click(function(){
      $(".advs_self").css("display", "block");

      $(".n1").click(function(){
        $(".n2").toggleClass("unseen");
        $(".n2").click(function(){
          $(".n2").toggleClass("unseen");
          $(".n3").toggleClass("unseen");
          $(".n3").click(function(){
            $(".n3").toggleClass("unseen");
            $(".n4").toggleClass("unseen");
            $(".n4").click(function(){
              $(".n4").toggleClass("unseen");
              $(".n5").toggleClass("unseen");
              $(".n5").click(function(){
                $(".advs_self").css("display", "none");
              })
            })
          })
        })
      })
    })
  });
</script>
